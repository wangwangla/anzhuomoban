<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRecordActivity">
    <RelativeLayout
        android:layout_above="@+id/linearLayout"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textView_amount"
            android:text="0.00"
            android:textColor="@android:color/white"
            android:textSize="50dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="80dp" />
        <EditText
            android:id="@+id/editText"
            android:text="XXX"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="15dp"
            android:textSize="30dp"
            android:textColor="@android:color/white"
            android:gravity="center_vertical"
            android:layout_below="@id/textView_amount"
            android:background="@drawable/bg_edit_text"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_below="@+id/editText"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:background="@android:color/white"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TableLayout android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TableRow android:layout_weight="1">
                        <Button android:layout_weight="1"
                            android:text="1"
                            android:id="@+id/keyboard_one"
                            android:background="@android:color/white"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"/>
                        <Button android:layout_weight="1"
                            android:text="2"
                            android:id="@+id/keyboard_two"
                            android:background="@android:color/white"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"/>
                        <Button android:layout_weight="1"
                            android:text="3"
                            android:id="@+id/keyboard_three"
                            android:background="@android:color/white"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"/>
                    </TableRow>
                    <TableRow android:layout_weight="1">
                        <Button android:layout_weight="1"
                            android:text="4"
                            android:id="@+id/keyboard_four"
                            android:background="@android:color/white"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"/>
                        <Button android:layout_weight="1"
                            android:text="5"
                            android:id="@+id/keyboard_five"
                            android:background="@android:color/white"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"/>
                        <Button android:layout_weight="1"
                            android:text="6"
                            android:id="@+id/keyboard_six"
                            android:background="@android:color/white"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"/>
                    </TableRow>
                    <TableRow android:layout_weight="1">
                        <Button android:layout_weight="1"
                            android:text="7"
                            android:id="@+id/keyboard_seven"
                            android:background="@android:color/white"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"/>
                        <Button android:layout_weight="1"
                            android:text="8"
                            android:id="@+id/keyboard_eight"
                            android:background="@android:color/white"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"/>
                        <Button android:layout_weight="1"
                            android:text="9"
                            android:id="@+id/keyboard_nine"
                            android:background="@android:color/white"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"/>
                    </TableRow>
                    <TableRow android:layout_weight="1">
                        <Button android:layout_weight="1"
                            android:text=""
                            android:background="@android:color/white"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"/>
                        <Button android:layout_weight="1"
                            android:text="0"
                            android:id="@+id/keyboard_zero"
                            android:background="@android:color/white"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"/>
                        <Button android:layout_weight="1"
                            android:id="@+id/keyboard_dot"
                            android:text="."
                            android:background="@android:color/white"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"/>
                    </TableRow>
                </TableLayout>
            </TableLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/keyboard_type"
                    android:layout_width="match_parent"
                    android:background="@android:color/white"
                    android:layout_weight="2"
                    android:src="@drawable/baseline_attach_money_black_24"
                    android:layout_height="wrap_content" />
                <ImageButton
                    android:id="@+id/keyboard_backspace"
                    android:layout_width="match_parent"
                    android:background="@android:color/white"
                    android:layout_weight="1"
                    android:src="@drawable/baseline_backspace_black_18"
                    android:layout_height="wrap_content" />
                <ImageButton
                    android:id="@+id/keyboard_done"
                    android:layout_width="match_parent"
                    android:background="@android:color/white"
                    android:layout_weight="1"
                    android:src="@drawable/baseline_done_black_18"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>